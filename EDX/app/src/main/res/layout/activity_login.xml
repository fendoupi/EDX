<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@color/colorGreen"
    >
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/delete"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="22dp"
        android:textColor="@color/colorWhite"
        android:background="#00000000"

        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:singleLine="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:background="#00000000"

        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:gravity="center"
        android:singleLine="true" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/userAcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:textSize="25dp"
                >

            </EditText>
            <ImageView
                android:layout_alignRight="@+id/userAcount"
                android:layout_alignBottom="@+id/userAcount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/note"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/loginpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textSize="25dp"
                >

            </EditText>
            <ImageView
                android:layout_alignRight="@+id/loginpassword"
                android:layout_alignBottom="@+id/loginpassword"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pen"/>

        </RelativeLayout>
        <Button
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          android:background="@drawable/shape"
            android:text="确定"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:singleLine="true" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方登录"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/chat"
                />
            <ImageView

                android:layout_marginLeft="25dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/qq"
                />
            <ImageView
                android:layout_marginLeft="25dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/weibo"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>